{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**/*",
          "/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2|ico)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-announcements",
      "urls": ["/api/announcements/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "5m",
        "timeout": "3s"
      }
    },
    {
      "name": "api-auth",
      "urls": ["/api/auth/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 5,
        "maxAge": "0u",
        "timeout": "10s"
      }
    },
    {
      "name": "api-profile",
      "urls": ["/api/admin/profile/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 10,
        "maxAge": "10m",
        "timeout": "5s"
      }
    },
    {
      "name": "api-general",
      "urls": ["/api/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "external-avatars",
      "urls": ["https://i.pravatar.cc/**"],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 50,
        "maxAge": "7d"
      }
    },
    {
      "name": "bootstrap-icons",
      "urls": ["https://cdn.jsdelivr.net/npm/bootstrap-icons**"],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 5,
        "maxAge": "30d"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/**/*.*",
    "!/**/*__*",
    "!/**/*__*/**"
  ]
}
